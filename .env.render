APP_NAME=Sponsoring24
APP_ENV=production
APP_DEBUG=false
APP_URL=https://sponsoring24.onrender.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_STACK=single

# Vite specific settings
VITE_APP_ENV=production
VITE_APP_URL=https://sponsoring24.onrender.com
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Render specific settings
RENDER_EXTERNAL_URL=https://sponsoring24.onrender.com
RENDER_SERVICE_TYPE=web
RENDER_BUILD_COMMAND="bash render-build.sh"
RENDER_START_COMMAND="bash docker/start.sh"

# Optimize for Render environment
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Disable debug mode in production
APP_DEBUG=false

# Enable detailed error logging
PRODUCTION_DEBUG=true
PRODUCTION_DETAILED_LOGGING=true
USE_VITE_MANIFEST=true
